{
  "extends": [
    "next/core-web-vitals",
    "plugin:storybook/recommended"
  ],
  "ignorePatterns": [
    ".eslintrc.js",
    "next.config.js",
    "next-env.d.ts",
    "node_modules",
    "out",
    "public",
    "storybook-static",
    "stories",
    "tsconfig.json"
  ],
  "rules": {
    "no-restricted-imports": [
      "error",
      {
        "patterns": ["@/features/*/*'"]
      }
    ],
    "import/no-cycle": "error"
  }
}
